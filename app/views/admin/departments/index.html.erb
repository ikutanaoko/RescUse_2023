<h1>部署一覧・追加</h1>
<%= render 'layouts/error_messages', obj: @department %>
<%= form_with model: [:admin, @department] do |f| %>
  <%= f.label :name, "部署名", class:"mr-5" %>
    <%= f.text_field :name, class:"mr-5" %>
    <%= f.submit '追加', class:"btn btn-success" %>
<% end %>

<div class="row mb-5">
  <div class="col-md-4">
    <table class="table my-5">
      <thead class="thead-light">
        <tr>
          <th><b>部署一覧</b></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name %></td>
              <td><%= link_to "編集", edit_admin_department_path(department), class:"btn btn-success form-control" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>