<div class="container">
  <div class="row">
    <h5 class="font-weight-bold ml-3">部署一覧・追加</h5>
  </div>
    <div class="row ml-1">
      <%= render 'layouts/error_messages', obj: @department %>
    </div>
    <div>
      <%= form_with model: [:admin, @department] do |f| %>
        <%= f.label :name, "部署名", class:"mr-3" %>
          <%= f.text_field :name, class:"mr-3" %>
          <%= f.submit '追加' %>
      <% end %>
    </div>
  
    <div class="row">
    <div class="col-md-4">
      <table class="table my-5">
        <thead class="thead-light">
          <tr>
            <th><b></b></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            <% @departments.each do |department| %>
              <tr>
                <td><%= link_to department.name, admin_department_path(department) %></td>
                <td><%= link_to "編集", edit_admin_department_path(department) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>  
</div>