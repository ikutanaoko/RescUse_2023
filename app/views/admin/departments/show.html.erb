<div class="container">
  <div class="row">
    <h5 class="font-weight-bold ml-3">社員一覧(<%= @department.name %>)</h5>

    <table class="table table-sm">
      <thead>
        <tr>
          <th>社員番号</th>
          <th>名前</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.employee_number %></td>
        <td><%= link_to user.name,admin_user_path(user) %></td>
        <td><%= user.status %></td>
      </tr>
      </tbody>
    <% end %>
    </table>
    
    <div class="text-center mx-auto">
    <hr>
      <%= paginate @users %>
    </div>
    
  </div>  
</div>