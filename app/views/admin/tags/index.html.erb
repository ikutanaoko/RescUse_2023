<h1>タグ一覧・追加</h1>
<%= render 'layouts/error_messages', obj: @tag %>
<%= form_with model: [:admin, @tag] do |f| %>
  <%= f.label :name, "タグ", class:"mr-5" %>
    <%= f.text_field :name, class:"mr-5" %>
    <%= f.submit '追加', class:"btn btn-success" %>
<% end %>

<div class="row mb-5">
  <div class="col-md-4">
    <table class="table my-5">
      <thead class="thead-light">
        <tr>
          <th><b>タグ一覧</b></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= link_to "編集", edit_admin_tag_path(tag), class:"btn btn-success form-control" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>