<!DOCTYPE html>
<html>
  <head>
    <title>RescUse</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/6bb66a36c5.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  
  <body>
    <%= render 'layouts/header' %>
    
    <main>
      <div class="ml-5 mt-3 text-info">
        <p id="notice"><%= notice %></p>
      </div>
      <div class="ml-5 mt-3 text-danger">
        <p class="alert"><%= alert %></p>
      </div>
      <div class="container">
    <%= yield %>
      </div>
    </main>
  </body>
</html>
